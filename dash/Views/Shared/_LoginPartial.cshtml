@if (Context.User.Identity?.IsAuthenticated == true)
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <span class="btn btn-link navbar-btn navbar-link text-dark" style="cursor: default; text-decoration: none;">
                    Welcome @Context.User.Identity.Name
                </span>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link text-dark" style="text-decoration: none;">Logout</button>
            </li>
        </ul>
    </form>
} 
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="nav-link text-dark" asp-controller="Account" asp-action="Registration">Register</a></li>
        <li><a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a></li>
    </ul>
}