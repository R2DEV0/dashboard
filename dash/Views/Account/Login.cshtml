@model dash.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex align-items-start justify-content-center">
    <div class="row w-100 mt-3">
        <!-- Left: Login Form -->
        <div class="col-md-6 d-flex align-items-start justify-content-center">
            <div class="w-100" style="max-width: 400px;">
                <h1 class="text-center">Login</h1>
                <hr />
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserNameOrEmail" class="control-label"></label>
                        <input asp-for="UserNameOrEmail" class="form-control" />
                        <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Login" class="btn btn-primary w-100" />
                    </div>
                </form>
                <div class="mt-2 text-center">
                    <small>Don't have an account? <a asp-action="Registration">Register Now</a></small>
                </div>
            </div>
        </div>

        <!-- Right: Image and/or Text -->
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <div class="text-center">
                <img src="/assets/login2.jpg" alt="Login Illustration" class="img-fluid rounded mb-3" style="max-width: 70%;" />
                <p class="lead">Welcome back! Please log in to access your account and explore our features.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
