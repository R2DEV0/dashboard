@model dash.Models.ManageViewModel

@{
    ViewData["Title"] = "Manage Account";
}

<div class="container my-5">
    <h1 class="display-5 text-center">Welcome Back, @Model.User.FirstName!</h1>
    <p class="text-muted text-center">Manage your account details below.</p>

    <div class="row w-100 mt-4">
        <div class="col text-end">
            <a href="@Url.Action("EditUser", "Account", new { id = Model.User.Id })" class="btn btn-success">
                Edit Account
            </a>
            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="btn btn-secondary">Logout</button>
            </form>
        </div>
    </div>


    <div class="card shadow-lg mt-4">
        <div class="card-body">
            <h3 class="card-title text-center">Account Details</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">First Name:</dt>
                <dd class="col-sm-8">@Model.User.FirstName</dd>

                <dt class="col-sm-4">Last Name:</dt>
                <dd class="col-sm-8">@Model.User.LastName</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.User.Email</dd>

                <dt class="col-sm-4">Email Confirmed:</dt>
                <dd class="col-sm-8">
                    @if (Model.User.EmailConfirmed)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No</span>
                    }
                </dd>

                <dt class="col-sm-4">Member Since:</dt>
                <dd class="col-sm-8">@Model.User.CreatedAt.ToString("MMMM dd, yyyy")</dd>
            </dl>
        </div>
    </div>
</div>
