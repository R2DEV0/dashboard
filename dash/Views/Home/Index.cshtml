@{
    ViewData["Title"] = "Landing";
}

<div class="container mt-5">
    <!-- Header Section -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Unlock the Full Potential of Your Site!</h1>
        <p class="lead text-muted">Choose the perfect plan for your needs and get started today!</p>
    </div>

    <!-- Pricing Section -->
    <div class="row justify-content-center">
        <!-- Free Trial -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-secondary h-100 d-flex flex-column">
                <div class="card-header bg-secondary text-white text-center">
                    <h3>Free Trial</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <h2 class="card-title text-center">$0</h2>
                    <ul class="list-unstyled">
                        <li>✓ Limited Features</li>
                        <li>✓ Access to Free Content</li>
                        <li>✓ 7-Day Trial Period</li>
                    </ul>
                    <div class="text-center mt-auto">
                        <a href="@Url.Action("Registeration", "Account")" class="btn btn-secondary w-100">Start Free Trial</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Basic Package -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-primary h-100 d-flex flex-column">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Basic Package</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <h2 class="card-title text-center">$9.99/month</h2>
                    <ul class="list-unstyled">
                        <li>✓ Access to Most Features</li>
                        <li>✓ Community Support</li>
                        <li>✓ Exclusive Content</li>
                    </ul>
                    <div class="text-center mt-auto">
                        @* <a href="@Url.Action("Purchase", "Membership", new { package = "basic" })" class="btn btn-success w-100">Buy Basic</a> *@
                        <a href="#" class="btn btn-primary w-100">Buy Basic</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Premium Membership -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-success h-100 d-flex flex-column">
                <div class="card-header bg-success text-white text-center">
                    <h3>Premium Membership</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <h2 class="card-title text-center">$19.99/month</h2>
                    <ul class="list-unstyled">
                        <li>✓ All Features Included</li>
                        <li>✓ Priority Support</li>
                        <li>✓ Premium Content</li>
                        <li>✓ Exclusive Webinars</li>
                    </ul>
                    <div class="text-center mt-auto">
                        @* <a href="@Url.Action("Purchase", "Membership", new { package = "premium" })" class="btn btn-warning w-100">Go Premium</a> *@
                        <a href="#" class="btn btn-success w-100">Go Premium</a>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Feature Comparison Section -->
    <div class="mt-5">
        <h2 class="text-center mb-4">Compare Plans</h2>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="table-dark text-center">
                    <tr>
                        <th>Features</th>
                        <th>Free Trial</th>
                        <th>Basic Package</th>
                        <th>Premium Membership</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Access to Free Content</td>
                        <td class="text-center">✓</td>
                        <td class="text-center">✓</td>
                        <td class="text-center">✓</td>
                    </tr>
                    <tr>
                        <td>Exclusive Content</td>
                        <td class="text-center">✗</td>
                        <td class="text-center">✓</td>
                        <td class="text-center">✓</td>
                    </tr>
                    <tr>
                        <td>Priority Support</td>
                        <td class="text-center">✗</td>
                        <td class="text-center">✗</td>
                        <td class="text-center">✓</td>
                    </tr>
                    <tr>
                        <td>Premium Content</td>
                        <td class="text-center">✗</td>
                        <td class="text-center">✗</td>
                        <td class="text-center">✓</td>
                    </tr>
                    <tr>
                        <td>Exclusive Webinars</td>
                        <td class="text-center">✗</td>
                        <td class="text-center">✗</td>
                        <td class="text-center">✓</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-5">
        <h3>Still Not Sure?</h3>
        <p class="text-muted">Contact our support team or check out our FAQ for more details.</p>
        @* <a href="@Url.Action("Contact", "Home")" class="btn btn-outline-secondary">Contact Us</a> *@
        <a href="#">Contact Us</a>
    </div>
</div>
