@model dash.Models.PermissionsViewModel

@{
    ViewData["Title"] = "Permissions";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Manage Permissions</h1>
        <div>
            <button class="btn btn-secondary" id="backBtn" onclick="location.href='@Url.Action("Index", "Admin")'">
                Back
            </button>
            <button class="btn btn-primary" id="addPermissionBtn">
                <i class="bi bi-plus-circle"></i> Add New Permission
            </button>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var permission in Model.Permissions)
                    {
                        <tr>
                            <td>@permission.Id</td>
                            <td>@permission.Name</td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-warning editPermissionBtn" data-id="@permission.Id">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-danger removePermissionBtn" data-id="@permission.Id">
                                    <i class="bi bi-trash"></i> Remove
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addEditPermissionModal" tabindex="-1" aria-labelledby="addEditPermissionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addEditPermissionModalLabel">Add/Edit Permission</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalContent">
                <!-- The form will be loaded here via AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/permissions.js"></script>
}
